<!DOCTYPE html>
<html>
<head>
    <title>Admin Page</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap');

        /* base style */
        * {
        margin: 0;
        font-family: "Quicksand";
        color: #333;
        }

        .chat-groups-users {
        max-width: 400px;
        margin-top: 100px;
        margin-bottom: 0;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        }

        .chat-groups-users h1 {
        font-size: 20px;
        color: #f1356d;
        margin-bottom: 30px;
        }

        .chat-groups-users h2 {
        font-size: 20px;
        color: #f1356d;
        margin-bottom: 30px;
        }

        .chat-groups-users ul {
            width: 50%;
            margin-left: 25%;
        }

        .chat-groups-users .chat-groups-container {
            border: 2px;
            border-color: #7e7b7b;
        }

        .chat-groups-users .chat-users-container {
            border: 2px;
            border-color: #7e7b7b;
        }

        .chat-groups-users a {
        text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="chat-groups-users">
        <h1>Welcome to the Admin Page</h1></br>
        <h1>Chose a Group or a User to update</h1></br>
        <div class="chat-groups-container">
            <h2>Chat Groups</h2>
            <div>
                <% chatGroups.forEach(group => { %>
                    <div class="js-group" data-group-desc="<%= group.desc %>">
                        <a href="#" data-group-desc="<%= group.desc %>"><%= group.desc %></a>
                    </div>
                <% }); %>
                </div>
        </div>
        
        <div class="chat-users-container">
            <h2>Users</h2>
            <div>
                <% usersData.forEach(user => { %>
                    <div class="js-user" data-user-id="<%= user.username %>">
                        <a href="#" data-user-id="<%= user.username %>"><%= user.username %></a>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <script>
        const userList = document.querySelectorAll('.js-user');
        const groupList = document.querySelectorAll('.js-group');

        userList.forEach(user => {
            user.addEventListener('click', (event) => {
                event.preventDefault();
    
                const userIdToUpdate = user.getAttribute('data-user-id');
                localStorage.setItem('userIdToUpdate', userIdToUpdate);

                window.location.href = '/updatePassword';
            });
        });

        groupList.forEach(group => {
            group.addEventListener('click', (event) => {
                event.preventDefault();
    
                const groupToUpdate = group.getAttribute('data-group-desc');
                localStorage.setItem('groupToUpdate', groupToUpdate);

                window.location.href = '/updateGroup';
            });
        });
    </script>
</body>
</html>